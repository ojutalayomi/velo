<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- displays site properly based on user's device -->
    <title>Velo</title>
    <style>
      body {
        background: white;
        color: #242742;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #ff6257;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
      }
      .success-message {
        margin: 0 auto;
        max-width: 600px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .success-message img {
        display: block;
        margin: 0 auto;
        width: auto;
      }
      .success-message-content {
        text-align: center;
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .success-message-content h1 {
        font-size: 32px;
        margin: 10px 0;
      }
      .success-message-content h2 {
        font-size: 24px;
        margin: 10px 0;
      }
      .success-message-content h4 {
        font-size: 16px;
        margin: 10px 0;
      }
      .attribution {
        text-align: center;
        margin-top: 20px;
        color: #666;
      }
      .attribution a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="success-message">
      <img alt="{{imageAlt}}" style="{{style}}" src="{{imageSrc}}" />
      <div class="success-message-content" style="flex-direction: column;">
        <h1>Dear {{firstname}} {{lastname}},</h1>
        <h2>{{heading}}</h2>
        <h4>{{message}}</h4>
        {{#if message}}
          <h4>{{message1}}</h4>
        {{/if}}
        {{#if display}}
          <a href="{{link}}" style="display: {{display}};" class="button">{{Click}}</a>
          <p style="display: {{display}};">Or</p>
          <p style="display: {{display}};">Click the link below to continue to the next step:</p>
          <a href="{{link}}" style="display: {{display}};" class="button">{{link}}</a>
        {{/if}}
      </div>
    </div>
    <div class="attribution">
      Coded by
      <a style="text-decoration: none;" href="https://x.com/ojutalayomi">Ayomide Ojutalayo</a>.
    </div>
  </body>
</html>